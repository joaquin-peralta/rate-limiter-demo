<div data-controller="flash">
  <% if flash.now[:notice] %>
    <div
      class="fixed top-4 right-4 z-50 px-4 py-3 bg-green-100 text-green-800 border border-green-300 rounded-lg shadow-lg transition transform duration-300 ease-out"
    >
      <%= flash.now[:notice] %>
    </div>
  <% elsif flash.now[:alert] %>
    <div
      class="fixed top-4 right-4 z-50 px-4 py-3 bg-yellow-100 text-yellow-800 border border-yellow-300 rounded-lg shadow-lg transition transform duration-300 ease-out"
    >
      <%= flash.now[:alert] %>
    </div>
  <% end %>
</div>
