<div data-controller="flash">
  <% if flash.now[:notice] %>
    <div class="fixed top-0 right-0 p-2 bg-green-100 text-green-800 border border-green-300 rounded">
      <%= flash.now[:notice] %>
    </div>
  <% elsif flash.now[:alert] %>
    <div class="fixed top-0 right-0 p-2 bg-yellow-100 text-yellow-800 border border-yellow-300 rounded">
      <%= flash.now[:alert] %>
    </div>
  <% end %>
</div>
